#include <iostream>
using namespace std;

int main()
{
	//declaration
    int n, sum = 0,i;
	//description
    cout << "Enter a positive integer: ";
    cin >> n;

    for (int i = 1; i <= n; ++i)
	{
        sum += i;
    }

    cout << "The sum of all whole numbers from 1 to "<<n<<" is: "<<sum;
    return 0;
}
