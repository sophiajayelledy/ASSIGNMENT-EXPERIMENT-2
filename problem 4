#include <iostream>
#include <conio.h>

using namespace std;

int main()

{
	//declarations
	float x, y, z;
	//descriptions
	cout << "Enter first number: ";		cin >> x; 
	cout << "Enter second number: ";	cin >> y; 
	cout << "Enter third number: ";		cin >> z; 
	
	if ((x >= y) && (x >= z))
		cout << "The largest among the three numbers is " << x << ".";
	
	else if ((y >= x) && (y >= z))
			cout << "The largest among the three numbers is " << y <<".";
	
	else
		cout << "The largest among the three numbers is " << z<<".";
	
	return 0;
}
